<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_channel"
        android:layout_width="fill_parent"
        android:layout_height="48px"
        android:paddingTop="8px"
        android:paddingBottom="8px">
    <ImageView
            android:id="@+id/row_logo"
            android:layout_width="64px"
            android:layout_height="48px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="13px"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_launcher"
            />
    <TextView
            android:id="@+id/row_name"
            android:layout_toRightOf="@id/row_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:layout_marginRight="6px"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Name"
            android:textStyle="bold" android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_toRightOf="@+id/row_name"
            android:layout_alignTop="@+id/row_name" android:textSize="12sp"/>
</RelativeLayout>