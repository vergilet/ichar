<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/login_bg_gradient">


    <TextView
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/header_mp" android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp" android:layout_alignParentRight="false" android:layout_marginRight="42dp"
            android:id="@+id/uid" android:text="[ Your ID ]" android:gravity="center"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:text="←"
            android:layout_row="2" android:layout_column="0"
            android:textSize="18sp"
            android:background="@drawable/back_button" android:layout_gravity="center_vertical"
            android:textColor="#f5faff" android:paddingBottom="5dp" android:textStyle="bold"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/button"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:text="→"
            android:layout_row="2" android:layout_column="1"
            android:textSize="18sp"
            android:background="@drawable/back_button" android:layout_gravity="center_vertical"
            android:textColor="#f5faff" android:singleLine="false" android:layout_marginLeft="224dp"
            android:paddingBottom="5dp" android:textStyle="bold" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:id="@+id/button1"/>


    <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/listView" android:layout_centerVertical="true" android:layout_below="@+id/photoIm"
            android:layout_marginTop="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/textView3"
            android:background="@drawable/line_mp" android:layout_alignParentTop="false"
            android:layout_alignWithParentIfMissing="false" android:layout_marginTop="50dp"/>





    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/photoIm"
            android:src="@drawable/camera_a"
            android:background="@drawable/avatar_border"
            android:padding="5dp"
            android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
            android:layout_below="@+id/textView3"/>



    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ярослав"
            android:id="@+id/name"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#ffffff" android:layout_toRightOf="@+id/photoIm"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_above="@+id/activ"/>


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Зарезервована територія"
            android:id="@+id/textView" android:layout_alignParentBottom="true"
            android:gravity="center" android:layout_centerHorizontal="true" android:background="#33a733"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/activ"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textColor="#dddddd" android:layout_toRightOf="@+id/photoIm"
            android:layout_alignBottom="@+id/photoIm" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


</RelativeLayout>

